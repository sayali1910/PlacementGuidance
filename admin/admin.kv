<FlatButton@ButtonBehavior+Label>:
    font_size:16

<AdminWindow>:
    id: main_win
    orientation: "vertical"
    canvas.before:
        Rectangle:
            size:self.size
            pos:self.pos
            source:"C:\\Users\\Sayali\\Desktop\\Project\\Student\\admin\\admin.jpg"


    BoxLayout:
        id:top_nav
        size_hint_y:None
        height:30
        canvas.before:
            Color:
                rgba:(0,0,0,1)
            Rectangle:
                size:self.size
                pos:self.pos
        FlatButton:
            id:file_trigger
            text:'file'
            on_release:file_dropdown.open(self)
            size_hint:(.1,None)
            height:30
            Widget:
                on_parent:file_dropdown.dismiss()

                DropDown:
                    id:file_dropdown
                    Button:
                        id:close
                        text:'Quit'
                        size_hint_y:None
                        height:30
                        on_release:root.back()
        Label:
            text:"Admin Dashboard"
            size_hint:(.9,None)
            height:30
            bold: True
            
    BoxLayout:
        id: content_nav

        BoxLayout:
            id:nav_tab
            size_hint_x:.2
            orientation:'vertical'
            spacing:3
            canvas.before:
                Color:
                    rgba:(0,0,0,.7)
                Rectangle:
                    size:self.size
                    pos:self.pos
            ToggleButton:
                id:user_toggle
                text:'Manage users'
                size_hint_y:.1
                state:'down'
                background_color:(0,0,0,0.7)
                background_normal:""
                group:'admin_navs'
                on_state:root.change_screen(self)
            ToggleButton:
                id:post_toggle
                text:'Manage posts'
                size_hint_y:.1
                background_color:(0,0,0,0.7)
                background_normal:""
                group:'admin_navs'
                on_state:root.change_screen(self)
            ToggleButton:
                id:que_toggle
                text:'Manage questions'
                size_hint_y:.1
                background_color:(0,0,0,0.7)
                background_normal:""
                group:'admin_navs'
                on_state:root.change_screen(self)
            ToggleButton:
                id:company_toggle
                text:'Manage company'
                size_hint_y:.1
                background_color:(0,0,0,0.7)
                background_normal:""
                group:'admin_navs'
                on_state:root.change_screen(self)
            ToggleButton:
                id:analysis_toggle
                text:'Analysis'
                size_hint_y:.1
                background_color:(0,0,0,0.7)
                background_normal:""
                group:"admin_navs"
                on_state:root.change_screen(self)
            Label:
                id:sp
                text:''
                size_hint_y:.7
        BoxLayout:
            id:all_content
            size_hint_x:.8
            padding:(20,10)
            ScreenManager:
                id:scrn_mngr
                Screen:
                    id:scrn_content
                    name:'scrn_content'
                    BoxLayout:
                        orientation:'vertical'
                        spacing:10
                        BoxLayout:
                            id:scrn_contents
                        BoxLayout:
                            id:ops_feilds
                            spacing:10
                            size_hint_y:None
                            height:35
                        BoxLayout:
                            id: ops_btns
                            spacing:10
                            size_hint_y:None
                            height:45
                            Button:
                                id:crud_add
                                text:'Add user'
                                on_release:root.add_user_feilds()
                            Button:
                                id:crud_update
                                text:'Update user'
                                on_release:root.update_user_feilds()
                            Button:
                                id:crud_remove
                                text:'Remove user'
                                on_release:root.remove_user_feilds()
                                
                            
                Screen:
                    id:scrn_post_content
                    name:'scrn_post_content'
                    BoxLayout:
                        orientation:'vertical'
                        spacing:10
                        BoxLayout:
                            id:scrn_post_contents
                        BoxLayout:
                            id:ops_feilds_p
                            spacing:10
                            size_hint_y:None
                            height:35
                        BoxLayout:
                            id: ops_btns
                            spacing:10
                            size_hint_y:None
                            height:45
                            Button:
                                id:crud_add_p
                                text:'Add post'
                                on_release:root.add_post_feilds()
                            Button:
                                id:crud_update_p
                                text:'Update Post'
                                on_release:root.update_post_feilds()
                            Button:
                                id:crud_remove_p
                                text:'Remove Post'
                                on_release:root.remove_post_feilds()
                Screen:
                    id:scrn_que_content
                    name:'scrn_que_content'
                    BoxLayout:
                        orientation:'vertical'
                        spacing:10
                        BoxLayout:
                            id:scrn_que_contents
                        BoxLayout:
                            id:ops_feilds_q
                            spacing:10
                            size_hint_y:None
                            height:35
                        BoxLayout:
                            id: ops_btns
                            spacing:10
                            size_hint_y:None
                            height:45
                            Button:
                                id:crud_add_q
                                text:'Add Q.'
                                on_release:root.add_que_feilds()
                            Button:
                                id:crud_update_q
                                text:'Update Q.'
                                on_release:root.update_que_feilds()
                            Button:
                                id:crud_remove_q
                                text:'Remove Q.'
                                on_release:root.remove_que_feilds()
                Screen:
                    id:scrn_company_content
                    name:'scrn_company_content'
                    BoxLayout:
                        orientation:'vertical'
                        spacing:10
                        BoxLayout:
                            id:scrn_company_contents
                        BoxLayout:
                            id:ops_feilds_c
                            spacing:10
                            size_hint_y:None
                            height:35
                        BoxLayout:
                            id: ops_btns
                            spacing:10
                            size_hint_y:None
                            height:45
                            Button:
                                id:crud_add_c
                                text:'Add Company'
                                on_release:root.add_company_feilds()
                            Button:
                                id:crud_update_c
                                text:'Update Company'
                                on_release:root.update_company_feilds()
                            Button:
                                id:crud_remove_c
                                text:'Remove Company'
                                on_release:root.remove_company_feilds()
                Screen:
                    id:scrn_analysis
                    name:'scrn_analysis'
                    BoxLayout:
                        orientation:'vertical'
                        spacing:10
                        BoxLayout:
                            orientation:'vertical'
                            size_hint_y:None
                            height:45
                            Spinner:
                                id:target_company
                                text:'Choose Company'
                            Button:
                                id:submit_analysis
                                text:'View Stats'
                                size_hint_x:.3
                                on_release:root.view_stats()
                        BoxLayout:
                            id:analysis_res    
                            
                
                    