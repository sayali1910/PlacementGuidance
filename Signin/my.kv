<FlatButton@ButtonBehavior+Label>:
    font_size:16
<Login>:
    BoxLayout:
        id: main_win
        orientation: "vertical"
        spacing:10
        space_x:self.size[0]/3
        canvas.before:
            
            Rectangle:
                size:self.size
                pos:self.pos
                source:"C:\\Users\\Sayali\\Desktop\\Student\\Signin\\login3.jpg"
        BoxLayout:
            size_hint_y:None
            height:50
            canvas.before:
                Color:
                    rgba:(0,0,0,0.7)
                Rectangle:
                    size:self.size
                    pos:self.pos
    
            Label:
                text:"  Welcome!!"
                bold: True
                font_size:30
                background_color:(0,0,0,0.5)
                color: 1,1,1,1
                size_hint_x:.9
            FlatButton:
                text:"X"
                font_size:25
                color: 1,1,1,1
                size_hint_x:.1
        BoxLayout:
            orientation:'vertical'
            padding: main_win.space_x,10
            BoxLayout:
                orientation:"vertical"
                spacing:20
                size_hint_y:None
                height:180
                Label:
                    id:info
                    text:''
                    markup: True
                    size_hint_y: None
                    height:20
                TextInput:
                    id: username_field
                    hint_text:"Username"
                    multiline: False
                    focus:True
                    on_text_validate:pwd_field.focus=True
    
                TextInput:
                    id:pwd_field
                    hint_text:"Password"
                    multiline: False
                    password:True
                    on_text_validate:root.login()
                TextInput:
                    id: year_field
                    hint_text:"FE/SE/TE/BE"
                    multiline: False
                    focus:True
                    on_text_validate:pwd_field.focus=True
            Label:
                id:sp
                size_hint_y:None
                height:40
            Button:
                size_hint_y:None
                height:40
                text:"Sign In"
                font_size:30
                color: 1,1,1,1
                background_color:(0,0,0,0.7)
                background_normal:''
                on_release:root.login()
            Label:
                id:sp
                size_hint_y:None
                height:40
        
            
            Button:
                size_hint_y:None
                height:40
                font_size: 30
                color: 1,1,1,1
                background_color:(0,0,0,0.7)
                background_normal:''
                text: "New User SignUp"
                on_press:root.signup()
           
            Label:
                id:sp2


